<?xml version="1.0"?>
<config>
	<modules>
		<ProxiBlue_ReCaptcha>
			<version>1.1.1</version>
			<depends>
				<Mage_Captcha/>
			</depends>
		</ProxiBlue_ReCaptcha>
	</modules>
	<global>
		<blocks>
			<proxiblue_recaptcha>
				<class>ProxiBlue_ReCaptcha_Block</class>
			</proxiblue_recaptcha>
		</blocks>
		<helpers>
			<proxiblue_recaptcha>
				<class>ProxiBlue_ReCaptcha_Helper</class>
			</proxiblue_recaptcha>
		</helpers>
		<models>
			<proxiblue_recaptcha>
				<class>ProxiBlue_ReCaptcha_Model</class>
			</proxiblue_recaptcha>
			<captcha>
				<rewrite>
					<recaptcha>ProxiBlue_ReCaptcha_Model_Recaptcha</recaptcha>
				</rewrite>
			</captcha>
		</models>
	</global>
	<default>
		<admin>
			<captcha>
				<type>recaptcha</type>
				<theme>clean</theme>
				<language>en</language>
				<mode>always</mode>
			</captcha>
		</admin>
		<customer>
			<captcha>
				<type>recaptcha</type>
				<theme>clean</theme>
				<language>en</language>
				<mode>always</mode>
			</captcha>
		</customer>
	</default>
</config>
