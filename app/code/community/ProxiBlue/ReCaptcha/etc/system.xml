<config>
	<sections>
		<admin>
			<groups>
				<captcha translate="label">
					<fields>
						<type translate="label">
							<label>Type</label>
							<frontend_type>select</frontend_type>
							<source_model>proxiblue_recaptcha/config_types</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enable>1</enable>
							</depends>
						</type>
					</fields>
				</captcha>
			</groups>
		</admin>
		<customer>
			<groups>
				<captcha translate="label">
					<fields>
						<font>
							<depends>
								<type>zend</type>
							</depends>
						</font>
						<mode>
							<depends>
								<type>zend</type>
							</depends>
						</mode>
						<timeout>
							<depends>
								<type>zend</type>
							</depends>
						</timeout>
						<length>
							<depends>
								<type>zend</type>
							</depends>
						</length>
						<symbols>
							<depends>
								<type>zend</type>
							</depends>
						</symbols>
						<case_sensitive>
							<depends>
								<type>zend</type>
							</depends>
						</case_sensitive>
						<public_key translate="label">
							<label>Public Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<type>recaptcha</type>
							</depends>
						</public_key>
						<private_key translate="label">
							<label>Private Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<type>recaptcha</type>
							</depends>
						</private_key>
						<theme translate="label">
							<label>Recaptcha Theme</label>
							<frontend_type>select</frontend_type>
							<source_model>proxiblue_recaptcha/config_themes</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<type>recaptcha</type>
							</depends>
						</theme>
						<language translate="label">
							<label>Language</label>
							<frontend_type>select</frontend_type>
							<source_model>proxiblue_recaptcha/config_lang</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<type>recaptcha</type>
							</depends>  
						</language>
					</fields>
				</captcha>
			</groups>
		</customer>
	</sections>
</config>
